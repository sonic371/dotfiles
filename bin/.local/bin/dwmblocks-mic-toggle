#!/bin/sh
# Display an icon if the microphone is muted.

case "$BLOCK_BUTTON" in
    1) pactl set-source-mute @DEFAULT_SOURCE@ toggle ;;
    6) kitty -e "$EDITOR" "$0" ;;
esac

. sb-theme

if pactl get-source-mute @DEFAULT_SOURCE@ | grep -q "^Mute: no"; then
    display " "
else
    display "󰍭 "
fi
    
