<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="apps-term-menu" label="Terminals">
  <item label="Kitty">
    <action name="Execute">
      <command>kitty</command>
    </action>
  </item>
  <item label="Cool Retro Term">
    <action name="Execute">
      <command>cool-retro-term</command>
    </action>
  </item>
  <item label="Yazi (Terminal FM)">
    <action name="Execute">
      <command>kitty yazi</command>
    </action>
  </item>
</menu>

<menu id="apps-editors-menu" label="Editors &amp; IDEs">
  <item label="Visual Studio Code">
    <action name="Execute">
      <command>code</command>
      <startupnotify>
        <enabled>yes</enabled>
        <wmclass>code</wmclass>
      </startupnotify>
    </action>
  </item>
  <item label="Micro Editor">
    <action name="Execute">
      <command>micro</command>
    </action>
  </item>
  <item label="Krita">
    <action name="Execute">
      <command>krita</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
</menu>

<menu id="apps-browsers-menu" label="Browsers">
  <item label="Firefox">
    <action name="Execute">
      <command>firefox</command>
      <startupnotify>
        <enabled>yes</enabled>
        <wmclass>Firefox</wmclass>
      </startupnotify>
    </action>
  </item>
  <item label="Google Chrome">
    <action name="Execute">
      <command>google-chrome-stable</command>
      <startupnotify>
        <enabled>yes</enabled>
        <wmclass>Google-chrome</wmclass>
      </startupnotify>
    </action>
  </item>
  <item label="Zen Browser">
    <action name="Execute">
      <command>zen-browser</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
</menu>

