<menu id="apps-dev-menu" label="Development">
  <item label="Git">
    <action name="Execute">
      <command>kitty</command>
    </action>
  </item>
  <item label="Node.js">
    <action name="Execute">
      <command>kitty node</command>
    </action>
  </item>
  <item label="npm">
    <action name="Execute">
      <command>kitty npm --help</command>
    </action>
  </item>
</menu>

<menu id="system-menu" label="System">
  <item label="Openbox Configuration (obconf-qt)">
    <action name="Execute">
      <command>obconf-qt</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Ly Display Manager">
    <action name="Execute">
      <command>sudo systemctl restart ly</command>
    </action>
  </item>
  <item label="UFW Firewall">
    <action name="Execute">
      <command>sudo ufw status</command>
    </action>
  </item>
  <item label="Manage CUPS Printers">
    <action name="Execute">
      <command>xdg-open http://localhost:631/</command>
      <startupnotify>
        <enabled>no</enabled>
        <icon>cups</icon>
      </startupnotify>
    </action>
  </item>
  <separator />
  <item label="Reconfigure Openbox">
    <action name="Reconfigure" />
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <separator label="Applications" />
  <menu id="apps-term-menu"/>
  <menu id="apps-editors-menu"/>
  <menu id="apps-browsers-menu"/>
  <menu id="apps-media-menu"/>
  <menu id="apps-graphics-menu"/>
  <menu id="apps-fileman-menu"/>
  <menu id="apps-systemtools-menu"/>
  <menu id="apps-gaming-menu"/>
  <menu id="apps-wm-menu"/>
  <menu id="apps-dev-menu"/>
  <separator label="System" />
  <menu id="system-menu"/>
  <separator />
  <item label="Log Out">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>
  </item>
</menu>

</openbox_menu>