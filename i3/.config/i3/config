# =====================
# Basic Configuration
# =====================
set $mod Mod4
font pango:monospace 10

floating_modifier $mod
tiling_drag modifier titlebar

include ~/.config/i3/workspaces.conf
include ~/.config/i3/rules.conf

exec_always --no-startup-id ~/.config/i3/scripts/autostart.sh

# =====================
# Status Bar
# =====================
bar {
    mode hide
    hidden_state hide
    status_command i3blocks
    colors {
        # Focused workspace (the one you are on)
        focused_workspace  #000000 #000000 #ffffff
        # Inactive workspace (other workspaces)
        inactive_workspace #000000 #000000 #888888
        # Urgent workspace (demands attention)
        urgent_workspace   #000000 #ffffff #000000
    }
}







