# =====================
# Basic Configuration
# =====================
set $mod Mod4
font pango:monospace 10

floating_modifier $mod
tiling_drag modifier titlebar

######################################################
# Plain Black & White Theme
######################################################

# Disable title bars for a clean, borderless look on tiled windows
default_border pixel 0
default_floating_border pixel 0

# Color definitions: Border, Background, Text, Indicator, Child Border
# Focused window: Bright white elements on pure black
client.focused          #000000 #000000 #ffffff #ffffff   #000000
# Unfocused window: Dark grey on black (almost invisible)
client.unfocused        #1a1a1a #000000 #666666 #1a1a1a   #000000
# Urgent window: Inverted black-on-white for stark contrast
client.urgent           #000000 #ffffff #000000 #000000   #ffffff
# Placeholder windows (empty workspaces): pure black
client.placeholder      #000000 #000000 #000000 #000000   #000000


# Workspace names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# =====================
# Auto-start Applications
# =====================

# Essential services
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id dunst
exec --no-startup-id picom

# Display & Input
exec --no-startup-id ~/Scripts/wallpaper.sh
exec --no-startup-id ~/Scripts/touchpad-setup.sh
exec --no-startup-id ~/Scripts/xinput-wacom-pan.sh
exec --no-startup-id setxkbmap -option altwin:swap_ralt_rwin

# System utilities
exec --no-startup-id unclutter -idle 3
exec --no-startup-id auto-cpufreq --daemon

# Applications
exec --no-startup-id fcitx5 -d
exec --no-startup-id mega-sync

# Lock & Suspend (consolidated)
exec --no-startup-id xset -b
exec --no-startup-id xset s 2100 2100
exec --no-startup-id xset dpms 2100 2100 2100
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork -c 000000
exec --no-startup-id xautolock -time 35 -locker 'systemctl suspend' -notify 30 -notifier 'notify-send "Suspending in 30 seconds"'

# =====================
# Status Bar
# =====================
bar {
    mode hide
    hidden_state hide
    status_command i3blocks
    colors {
        # Focused workspace (the one you are on)
        focused_workspace  #000000 #000000 #ffffff
        # Inactive workspace (other workspaces)
        inactive_workspace #000000 #000000 #888888
        # Urgent workspace (demands attention)
        urgent_workspace   #000000 #ffffff #000000
    }
}

# =====================
# Key Bindings
# =====================

# Application launchers
bindsym $mod+Return exec kitty
bindsym $mod+d exec "rofi -modi drun,run -show drun"
bindsym $mod+Tab exec "rofi -show window"

# Window management
bindsym $mod+q kill
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+n border toggle
bindsym $mod+b bar mode toggle

# Layout management
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Focus navigation (Vim style + arrows)
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Window movement (Vim style + arrows)
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Workspace switching
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move containers to workspaces
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Scratchpad management
bindsym $mod+Shift+equal move scratchpad
bindsym $mod+equal scratchpad show

# Screenshots
bindsym --release Print exec maim -s | xclip -selection clipboard -t image/png
bindsym --release Shift+Print exec maim -s ~/Pictures/screenshots/$(date +%Y-%m-%d_%H-%M-%S).png

# Media keys
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
# Pipewire-pulse
bindsym XF86AudioMute exec "pactl set-sink-mute 0 toggle; pkill -RTMIN+1 i3blocks"
bindsym XF86AudioLowerVolume exec "pactl set-sink-volume 0 -5%; pkill -RTMIN+1 i3blocks"
bindsym XF86AudioRaiseVolume exec "pactl set-sink-volume 0 +5%; pkill -RTMIN+1 i3blocks"
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# System controls
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'"

# Custom tools
bindsym $mod+x exec ~/Scripts/notify-fetch-mousepos.sh
bindsym $mod+Shift+q exec ~/Scripts/xinput-wacom-pan.sh
bindsym $mod+Shift+w exec ~/Scripts/xinput-wacom-middle-click.sh

# =====================
# Resize Mode
# =====================
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# =====================
# Window Rules
# =====================
for_window [title="scratchpad"] floating enable, move to scratchpad, resize set 1366 960





