# =====================
# Basic Configuration
# =====================
set $mod Mod4
font pango:monospace 10
default_border none
floating_modifier $mod
tiling_drag modifier titlebar

# Workspace names with icons
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# =====================
# Auto-start Applications
# =====================

# Essential services
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id dunst
exec --no-startup-id picom &

# Display & Input
exec --no-startup-id feh --bg-fill ~/Pictures/2.jpg
exec --no-startup-id ~/.config/i3/Touchpad-setup.sh
exec --no-startup-id ~/.config/i3/wacom-setup.sh
exec --no-startup-id setxkbmap -option altwin:swap_ralt_rwin

# System utilities
exec --no-startup-id unclutter -idle 3 &
exec --no-startup-id auto-cpufreq --daemon

# Applications
exec --no-startup-id fcitx5 -d
exec --no-startup-id mega-sync

# Lock & Suspend (consolidated)
exec --no-startup-id xset s 2100 2100
exec --no-startup-id xset dpms 2100 2100 2100
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork -c 000000 &
exec --no-startup-id xautolock -time 35 -locker 'systemctl suspend' -notify 30 -notifier 'notify-send "Suspending in 30 seconds"' &

# Key chain
exec --no-startup-id eval "$(ssh-agent -s)"[citation:8][citation:9]

# =====================
# Status Bar
# =====================
bar {
    mode dock
    hidden_state show
    status_command i3blocks
}
# set $refresh_i3status killall -SIGUSR1 i3status

# exec_always --no-startup-id polybar

# =====================
# Key Bindings
# =====================

# Application launchers
bindsym $mod+Return exec kitty
bindsym $mod+d exec "rofi -modi drun,run -show drun"
bindsym $mod+Tab exec "rofi -show window"

# Window management
bindsym $mod+q kill
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+n border toggle

# Layout management
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Focus navigation (Vim style + arrows)
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Window movement (Vim style + arrows)
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Workspace switching
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move containers to workspaces
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Scratchpad management
bindsym $mod+Shift+equal move scratchpad
bindsym $mod+equal scratchpad show

# Screenshots
bindsym --release Print exec maim -s | xclip -selection clipboard -t image/png
bindsym --release Shift+Print exec maim -s ~/Pictures/screenshots/$(date +%Y-%m-%d_%H-%M-%S).png

# Media keys
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5%
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# System controls
# bindsym $mod+b exec --no-startup-id polybar-msg cmd toggle
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'"
bindsym $mod+Shift+p exec i3lock -c 000000 && systemctl suspend

# Custom tools
bindsym $mod+x exec ~/.config/i3/mousepos_notify.sh
# bindsym $mod+c exec ~/.config/i3/set_share.sh
bindsym $mod+Shift+q exec ~/.config/i3/wacom-setup.sh
bindsym $mod+Shift+w exec ~/.config/i3/wacom-setup_2.sh

# =====================
# Resize Mode
# =====================
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# =====================
# Window Rules
# =====================
for_window [title="scratchpad"] floating enable, move to scratchpad, resize set 1366 960

# Pipewire-pulse
bindsym XF86AudioMute --release exec pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume --release exec pkill -RTMIN+1 i3blocks
bindsym XF86AudioRaiseVolume --release exec pkill -RTMIN+1 i3blocks
